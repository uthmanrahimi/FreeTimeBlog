@model ProfileDto
@{
    ViewData["Title"] = "Profile";
}
<div class="my-3 my-md-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card card-profile">
                    <div class="card-header" style="background-image: url(demo/photos/eberhard-grossgasteiger-311213-500.jpg);"></div>
                    <div class="card-body text-center">
                        <img class="card-profile-img" src="demo/faces/male/16.jpg">
                        <h3 class="mb-3">@Model.Name </h3>
                        <p class="mb-4">
                            @Model.JobTitle
                        </p>
                        <button class="btn btn-outline-primary btn-sm">
                            <span class="fa fa-twitter"></span> Follow
                        </button>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="media">
                            <span class="avatar avatar-xxl mr-5" style="background-image: url(demo/faces/male/21.jpg)"></span>
                            <div class="media-body">
                                <h4 class="m-0">@Model.Name</h4>
                                <p class="text-muted mb-0">@Model.JobTitle</p>
                                <ul class="social-links list-inline mb-0 mt-2">
                                    <li class="list-inline-item">
                                        <a href="@Model.LinkedinProfile" title="" data-toggle="tooltip" data-original-title="Facebook"><i class="fa fa-linkedin"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@Model.TwitterProfile" title="" data-toggle="tooltip" data-original-title="Twitter"><i class="fa fa-twitter"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@Model.GithubProfile" title="" data-toggle="tooltip" data-original-title="1234567890"><i class="fa fa-github"></i></a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a href="@Model.StackOverflowProfile" title="" data-toggle="tooltip" data-original-title="stack-overflow"><i class="fa fa-stack-overflow"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-8">
                <div class="card">

                    <ul class="list-group card-list-group">
                        <li class="list-group-item py-5">
                            <div class="media">
                                <div class="media-body">

                                    <div>
                                        @Html.Raw(Model.About)
                                    </div>

                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>