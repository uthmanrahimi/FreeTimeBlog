@model Envelope<IEnumerable<CommentDto>>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{


    <script src="~/js/management.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
}
<div class="my-3 my-md-5">
    <div class="container">

        <h2>Comments</h2>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Comments</h3>
                    </div>
                    <div class="table-responsive">
                        @if (!Model.Data.Any())
                        {
                            <div class="alert alert-primary">There is no data :)</div>
                        }
                        else
                        {
                            <table class="table card-table table-vcenter text-nowrap datatable">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Created</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.Data)
                                    {
                                        <tr>
                                            <td><a  class="text-reset">@item.AuthorName.SafeSubstring()</a></td>
                                            <td>
                                                @item.CreatedDate.ToFriendlyDateString()
                                            </td>
                                            <td>
                                                <span class="text-success @(item.IsApproved?"":"d-none") red">Approved</span>
                                                <span class="text-danger @(item.IsApproved?"d-none":"")">Waiting</span>
                                            </td>
                                            <td class="text-right">
                                                <a class="icon" asp-route="commentdetails" asp-route-commentId="@item.Id"><i class="fe fe-edit"></i></a>
                                                <a class="icon btn-delete-comment" data-id="@item.Id"><i class="fe fe-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                    <div class="card-footer d-flex align-items-center">
                        @Html.PagedListPager((IPagedList)ViewBag.PageOfItems, page => Url.RouteUrl("comments", new { page }), new X.PagedList.Mvc.Common.PagedListRenderOptionsBase { PageClasses = new[] { "page-link" }, ActiveLiElementClass = "active", LiElementClasses = new[] { "page-item" }, DisplayEllipsesWhenNotShowingAllPageNumbers = true })
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

